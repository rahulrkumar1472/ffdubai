generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Booking {
  id              String   @id @default(cuid())
  referenceId     String   @unique
  locale          String
  bookingType     String   @default("consultation")
  treatment       String?
  area            String?
  name            String
  email           String
  phone           String
  date            String
  time            String
  durationMinutes Int      @default(60)
  createdAt       DateTime @default(now())

  @@index([createdAt])
}
